<?xml version="1.0" encoding="UTF-8"?>
<database name="user_1" character_set="utf8" collate="utf8_general_ci">
    <!-- tables -->
    <tables>
        <!-- lists -->
        <table name="lists" primary="list_id">
            <fields>
                <field column="list_id" type="BIGINT" length="20" extra="auto_increment"/>
                <field column="sender_id" type="BIGINT" length="20"/>
                <field column="address" type="VARCHAR" length="100"/>
                <field column="city" type="VARCHAR" length="100"/>
                <field column="country" type="BIGINT" length="20"/>
                <field column="location" type="VARCHAR" length="100"/>
                <field column="phone" type="VARCHAR" length="100"/>
                <field column="postal_code" type="VARCHAR" length="100"/>
                <field column="subscribers_count" type="BIGINT" length="20"/>
                <field column="subscribers_inactive" type="BIGINT" length="20"/>
                <field column="subscribers_removed" type="BIGINT" length="20"/>
                <field column="subscribers_to_be_confirmed" type="BIGINT" length="20"/>
                <field column="subscribers_waiting_new_confirmation" type="BIGINT" length="20"/>
                <field column="title" type="VARCHAR" length="50"/>
            </fields>
        </table>
        <!-- senders -->
        <table name="senders" primary="sender_id">
            <fields>
                <field column="sender_id" type="BIGINT" length="20" extra="auto_increment"/>
                <field column="confirmed" type="TINYINT" length="1"/>
                <field column="email" type="VARCHAR" length="255"/>
                <field column="name" type="VARCHAR" length="50"/>
            </fields>
        </table>
    </tables>
</database>
