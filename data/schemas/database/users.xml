<?xml version="1.0" encoding="UTF-8"?>
<database name="user_1" character_set="utf8" collate="utf8_general_ci">
    <!-- tables -->
    <tables>
        <!-- lists -->
        <table name="lists" primary="list_id">
            <fields>
                <field column="list_id" type="BIGINT" length="20" extra="auto_increment"/>
                <field column="title" type="VARCHAR" length="50"/>
            </fields>
        </table>
        <!-- senders -->
        <table name="senders" primary="sender_id">
            <fields>
                <field column="sender_id" type="BIGINT" length="20" extra="auto_increment"/>
                <field column="confirmed" type="TINYINT" length="1"/>
                <field column="email" type="VARCHAR" length="255"/>
                <field column="name" type="VARCHAR" length="50"/>
            </fields>
        </table>
    </tables>
</database>
